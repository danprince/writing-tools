{
  "manifest_version": 3,
  "name": "Writing Tools",
  "version": "0.1",
  "description": "Add tools to Chrome for analysing writing",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      }
    }
  },
  "background": {
    "service_worker": "worker.js"
  }
}
